{
    "name": "@mdanka/glass-ui",
    "version": "0.1.1",
    "description": "Glass theme ui styling",
    "license": "Apache-2.0",
    "scripts": {
        "build": "yarn run build-prepare && sass src/index.scss lib/css/index.css && cp src/variables.scss lib/scss/",
        "build-prepare": "yarn run clean && mkdir -p lib/css && mkdir -p lib/scss",
        "build-watch": "yarn run build-prepare && sass --watch src/index.scss lib/index.css",
        "clean": "rimraf ./lib",
        "prepare": "yarn run build"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mdanka/glass-ui.git"
    },
    "keywords": [
        "style",
        "theme",
        "glass",
        "ui"
    ],
    "author": "Miklos Danka",
    "bugs": {
        "url": "https://github.com/mdanka/glass-ui/issues"
    },
    "devDependencies": {
        "rimraf": "^2.5.4",
        "sass": "^1.14.1"
    },
    "dependencies": {
        "normalize.css": "^8.0.0"
    }
}
